<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="15dp">

    <ImageView
        android:id="@+id/arrowback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/bell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bell"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@id/titik_tiga"/>

    <ImageView
        android:id="@+id/titik_tiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_titik_tiga"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/namauseratas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/arrowback"
        android:text="_iknip"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"/>

    <ImageView
        android:id="@+id/pp"
        android:layout_width="108dp"
        android:layout_height="100dp"
        android:layout_below="@id/namauseratas"
        android:layout_marginTop="20dp"
        android:src="@drawable/pp" />
    <TextView
        android:id="@+id/postcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toEndOf="@id/pp"
        android:layout_below="@id/namauseratas"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:text="6956"/>

    <TextView
        android:id="@+id/followerscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toEndOf="@id/postcount"
        android:layout_below="@id/namauseratas"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:text="27,7jt"/>

    <TextView
        android:id="@+id/postingan"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="25dp"
        android:layout_below="@id/postcount"
        android:text="Postingan"/>

    <TextView
        android:id="@+id/followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/postingan"
        android:layout_below="@id/followerscount"
        android:text="Followers"/>

    <TextView
        android:id="@+id/following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/postcount"
        android:layout_toRightOf="@id/followers"
        android:text="Following"/>

    <TextView
        android:id="@+id/followingcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toEndOf="@id/followerscount"
        android:layout_below="@id/namauseratas"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:text="219"/>

    <TextView
        android:id="@+id/usertengah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ikhwan Hanipp"
        android:layout_below="@id/pp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/kerja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Programmer"
        android:layout_below="@id/usertengah"/>
    <TextView
        android:id="@+id/bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kerja"
        android:layout_marginTop="10dp"
        android:text="@string/bio"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/editprofil"
        android:background="@drawable/tombol"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@id/bio"
        android:hint="Edit Profil"
        android:textColorHint="@color/black"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="20dp"
        android:background="@drawable/tombol"
        android:id="@+id/Bagikanprofil"
        android:layout_toRightOf="@id/editprofil"
        android:layout_below="@id/bio"
        android:hint="Bagikan Profil"
        android:textColorHint="@color/black"
        android:layout_width="180dp"
        android:layout_height="40dp"/>

    <ImageView
        android:paddingLeft="20dp"
        android:layout_marginRight="130dp"
        android:id="@+id/feed"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_feed"
        android:layout_below="@id/editprofil"/>

    <ImageView
        android:id="@+id/reels"
        android:layout_marginRight="130dp"
        android:layout_marginTop="30dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_reels"
        android:layout_below="@id/editprofil"
        android:layout_toRightOf="@id/feed"/>

    <ImageView
        android:id="@+id/tag"
        android:paddingRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tag"
        android:layout_below="@id/editprofil"
        android:layout_toRightOf="@id/reels"/>

        <ImageView
            android:id="@+id/home"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_home" />

    <ImageView
        android:id="@+id/search"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_search" />

    <ImageView
        android:id="@+id/upl"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_upload" />

    <ImageView
        android:id="@+id/reelb"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="260dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_reels" />

    <ImageView
        android:id="@+id/profac"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="340dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_profile_active" />

</RelativeLayout>